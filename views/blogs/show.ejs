<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>     

<div class="row">      
    <div class="col-lg-4 mt-3">
        <div class="card shadow mx-auto" style="width: 18rem;">
            <img src="<%=foundProduct.image%>" class="card-img-top" alt="...">
            <div class="card-body">
                <h2 class="card-title"><%=foundProduct.name%></h2>
                <h5 class="card-title"><%=foundProduct.title%></h5>
                <p class="card-text"><%=foundProduct.desc%></p>
                <a href="/blogs/<%=foundProduct._id%>" class="btn btn-info">View Blog</a>
                <a href="/blogs/<%=foundProduct._id%>/edit" class="btn btn-sm btn-light">Edit</a>
                <form class="d-inline-block" action="/blogs/<%=foundProduct._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-sm btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
